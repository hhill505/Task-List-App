<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :Title %>
  </div>
  <div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :Description %>
  </div>
  <div class="field">
    <%= f.label :Priority %><br>
    <%= f.text_field :Priority %>
  </div>
  <div class="field">
    <%= f.label :Due_Date %><br>
    <%= f.date_select :Due_Date %>
  </div>
  <div class="field">
    <%= f.label :Is_Completed_Toggle %><br>
    <%= f.check_box :Is_Completed_Toggle %>
  </div>
  <div class = "field">
    <%= f.label :Task_List %>
    <%= f.collection_select :task_list, @task_lists, :id, :Name, prompt: "Please select a Task List" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
